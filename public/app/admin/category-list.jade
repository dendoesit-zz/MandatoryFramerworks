.container 
  table.table
    thead
      td 
        h3 Category Name
    tr(ng-repeat="category in categories")
      td {{ category.name }}
      td
        button.btn.btn-warning(data-toggle="modal" ng-click="edit(category._id)" data-target="#modalTag" ) Edit
      td
        button.btn.btn-danger(ng-click="deleteCategory(category._id)") Delete
    tr
      td
        input.form-controler(ng-model="category.name")
        button.btn.btn-primary(ng-click="addCategory()") Add Category
      
    #modalTag.modal.fade(tabindex = "0" role='dialog')
     .modal-dialog
        .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true')
          h4.modal-title {{ modalTitle }} 
        .modal-body
          form
            .form-group
              label(for='name') Category Name
              input#username.form-control(type='text', ng-model='category.name', placeholder='text')
        .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button', ng-click='updateCategory()', data-dismiss='modal') Save